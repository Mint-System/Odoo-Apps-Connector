<?xml version="1.0" ?>
<odoo>
    <!-- DBSource -->
    <record model="ir.ui.view" id="view_kardex_settings_tree">
        <field name="name">base.kardex.settings.tree</field>
        <field name="model">base.kardex.settings</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="send_to_kardex_on_create" />
                <field name="number_of_kardex_products" />
                <field name="kardex_date_handling" />
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="view_kardex_settings_form">
        <field name="name">base.kardex.settings.form</field>
        <field name="model">base.kardex.settings</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                              <field name="send_to_kardex_on_create" />
                             <field name="number_of_kardex_products" />
                              <field name="kardex_date_handling" />
                        </group>
                    </group>
                   
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_kardex_settings">
        <field name="name">Kardex Settings</field>
        <field name="res_model">base.kardex.settings</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_kardex_settings_tree" />
    </record>
    <menuitem
        name="Kardex Settings"
        id="menu_kardex_settings"
        parent="base.next_id_9"
        action="action_kardex_settings"
    />
</odoo>