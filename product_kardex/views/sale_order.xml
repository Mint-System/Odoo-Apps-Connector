<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">kardex.view_order_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree[1]/field[@name='sequence']"
                position="after">
                <field name="position" />
            </xpath>
        </field>
    </record>

    <record id="view_tree" model="ir.ui.view">
        <field name="name">kardex.view_tree</field>
        <field name="model">kardex</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="value" />
            </tree>
        </field>
    </record>

    <record id="view_pivot" model="ir.ui.view">
        <field name="name">kardex.view_pivot</field>
        <field name="model">kardex</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="value" type="col" />
                <field name="name" type="row" />
                <field name="value" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="action_view_tree" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="res_model">kardex</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="document_server_action" model="ir.actions.server">
        <field name="name">kardex.document_server_action</field>
        <field name="model_id" ref="model_kardex_document" />
        <field name="state">code</field>
        <field name="code">
            action = {
            "type": "ir.actions.act_window",
            "view_mode": "tree,form",
            "res_model": model._name,
            }
        </field>
    </record>

    <menuitem name="kardex" id="kardex.menu_root" />

    <menuitem name="Documents" id="kardex.menu_document" parent="kardex.menu_root" />
    <menuitem name="Configurations" id="kardex.menu_configuration" parent="kardex.menu_root" />

    <menuitem name="Documents" id="kardex.menu_document" parent="kardex.documents_menu"
        action="kardex.action_view_tree" />
    <menuitem name="Server to list" id="kardex.menu_server_action"
        parent="kardex.menu_configuration" action="kardex.document_server_action" />

</odoo>
