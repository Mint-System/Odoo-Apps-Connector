<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mrp_bom_form_view" model="ir.ui.view">
        <field name="name">mrp.bom.kardex.form</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field readonly="True" name="kardex" />
            </xpath>

            <!--
dlist/field[@name='product_id']" position="replace">
                <field name="products_domain" column_invisible="True"/>
                <field name="product_id" domain="products_domain" context="{'default_detailed_type': 'product'}"/>
            </xpath>
            -->
        </field>
    </record>
</odoo>
